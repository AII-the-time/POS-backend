{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "build",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@api": ["src/api"],
            "@config": ["src/config"],
            "@DTO/*": ["src/DTO/*"],
            "@loaders": ["src/loaders"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"],
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
